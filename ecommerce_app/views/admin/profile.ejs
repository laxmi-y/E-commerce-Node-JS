    <!-- bootstrap-icon -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">

    <!-- custom-css -->
    <link rel="stylesheet" href="css/admin.css">

    <link rel="stylesheet" href="css/info.css">

    <!-- google-icon -->
